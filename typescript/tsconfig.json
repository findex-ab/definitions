{
  "compilerOptions": {
    "declaration": true, 
    "declarationMap": true,

    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",


    "lib": ["es2023"],
    "module": "commonjs",
    "preserveConstEnums": true,
    //"moduleResolution": "bundler",
   // "emitDeclarationOnly": true,
    
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@findex/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
